    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths" :{
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
    },
  },
  "exclude": [
    "node_modules"
  ]
}
