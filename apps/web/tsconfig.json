{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "pages/api/auth/[...nextauth].ts",
    "pages/account.jsx"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@context/*": ["context/*"],
      "@server/*": ["server/*"]
    }
  },
  "exclude": ["node_modules"]
}
