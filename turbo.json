{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "env": [
        "PORT",
        "HOST",
        "DB_URL",
        "GITHUB_CLIENT_SECRET",
        "GITHUB_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "DISCORD_CLIENT_ID",
        "CLOUDFLARE_TURNSTILE_SITE_KEY"
      ],
      "outputs": ["dist/**", ".next/**", "out/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:push:fdl": {
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV"]
}
